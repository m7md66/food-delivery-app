
@model FoodDeliveryApp.ViewModels.LoginViewModel
@{
    ViewData["redirectUrl"] = "~/Home";
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
 
}
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Welcome Back</p>
					<h1>Log In</h1> <hr />
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<div class="row justify-content-center" >
    <div class="col-md-4" style="margin:30px 0px;">
        <form asp-action="Login" method="post">
        
           
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" maxlength="100" />
                @*<input type="hidden"name="ReturnUrl" value="@ViewData["redirectUrl"]" />*@
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


           <input type="submit" value=" Login" style="background-color:darkgoldenrod" class="cart-btn btn  justify-content-center " />
        </form>
    </div>
    </div>


